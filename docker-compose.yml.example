version: "3"
services:
  nginx:
    image: nginx:1.20
    container_name: DTAC_Nginx
    ports:
      - "8010:80"
    volumes:
      - ./:/app
      - ./docker-conf/nginx/nginx.conf:/etc/nginx/conf.d/default.conf
    links:
      - php

  php:
    container_name: DTAC_CMS_PHP
    build:
      context: ./docker-conf/php
    volumes:
      - ./:/app
      - ./docker-conf/php/www.conf:/usr/local/etc/php-fpm.d/www.conf:rw
      - ./docker-conf/php/php.ini:/usr/local/etc/php/php.ini:rw
      - ./docker-conf/php/openssl.cnf:/etc/ssl/openssl.cnf:rw
    env_file:
      - "./.env"
    logging:
      driver: "json-file"
      options:
        max-size: "200k"
        max-file: "3"
    extra_hosts:
      - "host.docker.internal:172.17.0.1"
    working_dir: /app

  postgres:
    image: postgres:alpine
    container_name: DTAC_Postgres
    restart: unless-stopped
    environment:
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_USER: ${DB_USERNAME}
      POSTGRES_DB: ${DB_DATABASE}
      POSTGRES_PORT: ${DB_PORT}
    ports:
      - 54310:${DB_PORT}
    volumes:
      - ./docker-conf/postgres-data:/var/lib/postgresql/data

  redis:
    image: bitnami/redis:latest
    container_name: DTAC_Redis
    environment:
      - REDIS_PASSWORD=${REDIS_PASSWORD}
    ports:
      - 63710:${REDIS_PORT}

